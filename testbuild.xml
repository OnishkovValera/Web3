<project name="native2ascii-demo" default="native2ascii-demo" basedir=".">
    <property name="src.encoding"    value="UTF-8"/>

    <!-- Папка с вашими русскими .properties -->
    <property name="locale.src.dir"   value="src/main/resources/locale"/>
    <!-- Куда писать сконвертированные файлы -->
    <property name="locale.build.dir" value="build/locale"/>

    <target name="native2ascii-demo">
        <echo message="--> Converting all .properties from UTF-8 to ASCII with \\u-escapes"/>
        <!-- ПРАВИЛЬНАЯ ПОДПИСЬ: srcdir/destdir -->
        <native2ascii
                srcdir="${locale.src.dir}"
                destdir="${locale.build.dir}"
                encoding="${src.encoding}"
                includes="**/*.properties"/>

        <echo message="Converted files live in ${locale.build.dir}"/>
    </target>
</project>
